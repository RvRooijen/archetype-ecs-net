{
  "name": "archetype-ecs-net",
  "version": "0.2.1",
  "description": "Network layer for archetype-ecs: dirty tracking + binary delta sync",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "npx tsx example/server/main.ts & vite --open /example/client.html",
    "test": "tsc --noEmit && npx tsx --test tests/*.test.ts example/example.test.ts"
  },
  "keywords": [
    "ecs",
    "networking",
    "gamedev",
    "archetype-ecs",
    "binary-protocol",
    "delta-sync"
  ],
  "license": "MIT",
  "peerDependencies": {
    "archetype-ecs": ">=1.3.1"
  },
  "dependencies": {
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@types/ws": "^8.18.1",
    "archetype-ecs": "workspace:*",
    "tsx": "^4.21.0",
    "typescript": "^5.4.0",
    "vite": "^7.3.1"
  },
  "files": [
    "dist",
    "src"
  ]
}
